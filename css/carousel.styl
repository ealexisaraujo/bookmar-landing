.carousel
  text-align left
  margin: 2em 0
  max-width 580px
  margin: 2em auto
  &-content
    &[open]
      .carousel
        &-header
          border none
          &::-webkit-details-marker
           color var(--softRed)
  &-header
    padding: 1.5em 0
    border-bottom: 1px solid var(--ligthGray)
    font-style .9em
    &:focus
      outline: 0
    &::-webkit-details-marker
      color var(--softBlue)
      float right
  @media screen and (min-width 1024px)
    border-top: 1px solid var(--ligthGray)
